<weathergov-alerts class="display-block margin-top-4 desktop:grid-col-6">
{% for alert in content.alerts %}
<a id="alert_{{ loop.index }}"></a>
<div class="usa-accordion usa-accordion--bordered margin-bottom-1">
  <h2 class="usa-accordion__heading">
    <button
      type="button"
      class="usa-accordion__button"
      aria-expanded="{{ (loop.index == 1) ? 'true' : 'false' }}"
      aria-controls="a{{ loop.index }}">
      {{ alert.event }}
    </button>
  </h2>
  <div id="a{{loop.index}}" class="usa-accordion__content usa-prose">
    <p>
      In effect from {{ alert.onset }}
      {% if alert.ends %} - {{ alert.ends }}{% endif %}
    </p>
    <p>
      Issued by {{ alert.senderName }}
    </p>

    {% if alert.usesParsedDescription %}
      {% for label, infoText in alert.description %}
        <h3>{{ label | capitalize }}</h3>
        <p>{{ infoText }}</p>
      {% endfor %}
    {% else %}
      <p>{{ alert.description }}</p>
    {% endif %}

    {% if alert.instruction %}
    <h3>What to do</h3>
    <p>
      {{ alert.instruction | nl2br }}
    </p>
    {% endif %}
    <h3>Areas impacted</h3>
      <ul class="usa-list" style="columns:2;">
        {%  for areaName in alert.areaDesc %}
          <li class="">{{ areaName }}</li>
        {% endfor %}
      </ul>

    {{ drupal_block("weathergov_dynamic_safety_information", { weather_event: alert.event }) }}
  </div>
</div>
{% endfor %}
</weathergov-alerts>
